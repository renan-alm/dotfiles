# DOCKER/PODMAN Aliases
# -------------------------------------------------------

if command -v scutil &> /dev/null; then
    if [ "$(scutil --get LocalHostName)" != "Renans-MacBook-Pro" ]; then
        alias docker='podman'
    fi
fi
alias docker-run='docker run -it --rm -v "$PWD":/mnt'
#docker run -v $(pwd):/root -it node /bin/bash
alias docker-rmi='docker rmi $(docker images -q)'
alias docker-prune='docker images prune --all'
